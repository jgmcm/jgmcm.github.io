<div class="repo p-2 text-center">
  <a href="https://github.com/{{ include.username }}" class="text-decoration-none">
    <div class="card hoverable">
      <div class="card-body d-flex align-items-center">
        <img
          src="https://github.com/{{ include.username }}.png?size=80"
          alt="{{ include.username }}"
          class="rounded-circle"
          width="80"
          height="80"
          loading="lazy"
        >
        <div class="ml-3 text-left">
          <h5 class="card-title mb-0">{{ include.username }}</h5>
          <p class="card-text text-muted mb-0"><i class="fab fa-github"></i> GitHub Profile</p>
        </div>
      </div>
    </div>
  </a>
</div>
